<%= form_with model: bug, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :feature %>
    <%= f.text_area :feature, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :approach %>
    <%= f.text_area :approach, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :prevention %>
    <%= f.text_area :prevention, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :harm %>
    <%= f.text_area :harm, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :size %>
    <%= f.select :size, Bug.sizes_i18n.invert.map { |key, value| [key, Bug.sizes[value]]}, { include_blank: '選択してください' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :color %>
    <%= f.select :color, Bug.colors_i18n.invert.map { |key, value| [key, Bug.colors[value]]}, { include_blank: '選択してください' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :season %>
    <%= f.select :season, Bug.seasons_i18n.invert.map { |key, value| [key, Bug.seasons[value]]}, { include_blank: '選択してください' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :illustration %>
    <%= f.file_field :illustration, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit '登録', class: 'btn btn-primary' %>
  </div>
<% end %>
