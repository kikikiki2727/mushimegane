<p id="notice"><%= notice %></p>

<h1>Bugs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Feature</th>
      <th>Approach</th>
      <th>Prevention</th>
      <th>Harm</th>
      <th>Size</th>
      <th>Color</th>
      <th>Seazon</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td><%= bug.name %></td>
        <td><%= bug.feature %></td>
        <td><%= bug.approach %></td>
        <td><%= bug.prevention %></td>
        <td><%= bug.harm %></td>
        <td><%= bug.size %></td>
        <td><%= bug.color %></td>
        <td><%= bug.seazon %></td>
        <td><%= bug.user_id %></td>
        <td><%= link_to 'Show', bug %></td>
        <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
        <td><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bug', new_bug_path %>
