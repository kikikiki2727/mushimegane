<% content_for(:title, 'ログイン') %>
<div class="pt-2">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1><%= t('.title') %></h1>
        <div class="form py-3 px-4 my-3">
          <%= form_with url: login_path, local: true do |f| %>
            <div class="form-group mb-3">
              <i class="fas fa-envelope"></i> <%= f.label :email, User.human_attribute_name(:email) %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <div class="form-group mb-3">
              <i class="fas fa-key"></i> <%= f.label :password, User.human_attribute_name(:password) %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>

            <%= f.submit t('defaults.login'), class: 'btn btn-primary mb-2' %>
          <% end %>
        </div>
        <%= link_to t('.to_new_user'), new_user_path, class: 'text-center mb-3' %>
      </div>
    </div>
  </div>
</div>

