<% content_for(:title, 'ユーザー登録') %>
<div class="pt-2">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <h1><%= t '.title' %></h1>
        <div class="form">
          <%= form_with model: @user, local: true do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group mb-3">
              <i class="fas fa-user"></i> <%= f.label :name %>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group mb-3">
              <i class="fas fa-envelope"></i> <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>

            <div class="form-group mb-3">
              <i class="fas fa-key"></i> <%= f.label :password %>
              <%= f.password_field :password, class: 'form-control', placeholder: '8文字以上' %>
            </div>

            <div class="form-group mb-3">
              <i class="fas fa-key"></i> <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, class: 'form-control' %>
            </div>

            <%= f.submit t('defaults.register'), class: 'btn btn-primary mb-3' %>
          <% end %>
        </div>
        <%= link_to t('.to_login_page'), login_path, class: 'text-center mb-3' %>
      </div>
    </div>
  </div>
</div>
