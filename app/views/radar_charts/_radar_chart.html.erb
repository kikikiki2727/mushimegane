<canvas id="myChart"></canvas>
<script>
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
  type: 'radar',
  data: {
    labels: ["<%= RadarChart.human_attribute_name(:capture) %>", "<%= RadarChart.human_attribute_name(:breeding) %>", "<%= RadarChart.human_attribute_name(:quickness) %>", "<%= RadarChart.human_attribute_name(:evil) %>", "<%= RadarChart.human_attribute_name(:discomfort) %>"],
    datasets: 
    [
        {
        label: "<%= bug.name %>",
        data: [<%= bug.radar_chart.capture %>, <%= bug.radar_chart.breeding %>, <%= bug.radar_chart.quickness %>, <%= bug.radar_chart.evil %>, <%= bug.radar_chart.discomfort %>],
        backgroundColor: 'rgba(85,107,47,0.3)',
        borderColor: 'rgba(85,107,47)',
        borderWidth: 1,
        pointBackgroundColor: 'rgb(46,106,177)'
        },
        <% if bug == 1 %>{
          label: "<%= Bug.first.name %>",
          data: [<%= Bug.first.radar_chart.capture %>, <%= Bug.first.radar_chart.breeding %>, <%= Bug.first.radar_chart.quickness %>, <%= Bug.first.radar_chart.evil %>, <%= Bug.first.radar_chart.discomfort %>],
          backgroundColor: 'rgba(204,204,153,0.3)',
          borderColor: 'rgba(122,255,129,0.2)',
          borderWidth: 1,
          pointBackgroundColor: 'RGB(46,106,177)'
          }<% end %>
    ]
  },
  options: {
      title: {
          display: true,
          text: '他害虫との比較'
      },   
      scale: {
          ticks: {
              suggestedMin: 0,
              suggestedMax: 10,
              stepSize: 1
          }
      }
  }
});
</script>