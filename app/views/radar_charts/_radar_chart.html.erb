<canvas id="myChart" width=100 height=100 ></canvas>
<script>
var ctx = document.getElementById("myChart");
var myChart = new Chart(ctx, {
  type: 'radar',
  data: {
    labels: ["<%= RadarChart.human_attribute_name(:capture) %>", "<%= RadarChart.human_attribute_name(:breeding) %>", "<%= RadarChart.human_attribute_name(:prevention_difficulty) %>", "<%= RadarChart.human_attribute_name(:injury) %>", "<%= RadarChart.human_attribute_name(:discomfort) %>"],
    datasets: 
    [
        {
        label: "<%= bug.name %>",
        data: [<%= bug.radar_chart.capture %>, <%= bug.radar_chart.breeding %>, <%= bug.radar_chart.prevention_difficulty %>, <%= bug.radar_chart.injury %>, <%= bug.radar_chart.discomfort %>],
        backgroundColor: 'rgba(255,99,71,0.4)',
        borderColor: 'rgba(255,0,0)',
        borderWidth: 1,
        pointBackgroundColor: 'rgba(255,0,0)'
        },
        <% if other_bug.present? %>
          {
            label: "<%= other_bug.name %>",
            data: [<%= other_bug.radar_chart.capture %>, <%= other_bug.radar_chart.breeding %>, <%= other_bug.radar_chart.prevention_difficulty %>, <%= other_bug.radar_chart.injury %>, <%= other_bug.radar_chart.discomfort %>],
            backgroundColor: 'rgba(0,255,255,0.3)',
            borderColor: 'rgb(0,0,255)',
            borderWidth: 1,
            pointBackgroundColor: 'rgb(0,0,255)'
            }
        <% end %>
    ]
  },
  options: {
      title: {
          display: true,
          text: '他害虫との比較'
      },   
      scale: {
          ticks: {
              suggestedMin: 0,
              suggestedMax: 10,
              stepSize: 1
          }
      }
  }
});
</script>
